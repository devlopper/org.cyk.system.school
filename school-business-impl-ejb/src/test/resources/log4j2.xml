<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<Filters>
			    <!--MarkerFilter marker="CREATED" onMatch="ACCEPT" onMismatch="DENY" />
			    <ThresholdFilter level="TRACE" onMatch="ACCEPT" onMismatch="DENY"/>
			    -->
			</Filters>	
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %marker - %msg%n" />
		</Console>
		<Console name="InstallConsole" target="SYSTEM_OUT">
			<Filters>
				<MarkerFilter marker="install" onMatch="ACCEPT" onMismatch="DENY" />
			</Filters>
			<PatternLayout pattern="%d{HH:mm:ss.SSS} - %msg%n" />
		</Console>
		<Console name="BusinessCrudConsole" target="SYSTEM_OUT">
			<Filters>
				<MarkerFilter marker="JobTitleBusinessImpl" onMatch="ACCEPT" onMismatch="NEUTRAL" />
				<MarkerFilter marker="PersonBusinessImpl" onMatch="ACCEPT" onMismatch="NEUTRAL" />
				<MarkerFilter marker="create" onMatch="ACCEPT" onMismatch="NEUTRAL" />
				<MarkerFilter marker="update" onMatch="ACCEPT" onMismatch="DENY" />
				
			</Filters>
			<PatternLayout pattern="%d{HH:mm:ss.SSS} - %msg%n" />
		</Console>
		<Console name="BusinessCrudConsole2" target="SYSTEM_OUT">
			<Filters>
				<MarkerFilter marker="StudentClassroomSessionBusinessImpl" onMatch="NEUTRAL" onMismatch="DENY" />
				<MarkerFilter marker="create" onMatch="NEUTRAL" onMismatch="DENY" />
				<MarkerFilter marker="AFTER" onMatch="ACCEPT" onMismatch="DENY" />
			</Filters>
			<PatternLayout pattern="%d{HH:mm:ss.SSS} - %msg%n" />
		</Console>
		<Console name="ClassroomSessionAfterCreateConsole" target="SYSTEM_OUT">
			<Filters>
				<MarkerFilter marker="ClassroomSessionBusinessImpl" onMatch="NEUTRAL" onMismatch="DENY" />
				<MarkerFilter marker="create" onMatch="NEUTRAL" onMismatch="DENY" />
				<MarkerFilter marker="AFTER" onMatch="ACCEPT" onMismatch="DENY" />
			</Filters>
			<PatternLayout pattern="%d{HH:mm:ss.SSS} - %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<!--Logger name="org.cyk.system.root.business.impl.DataSet" level="trace">
			<AppenderRef ref="Console" />
		</Logger-->
		<!--Logger name="org.cyk.system.school.business.impl.__data__.iesa.FakeDataSet"
			level="trace">
			<AppenderRef ref="Console" />
		</Logger-->
		
		<Logger name="org.cyk.system.school.business.impl.iesa.Iesa_2016_2017_DataSet" level="trace">
			<AppenderRef ref="Console" />
		</Logger>
		
		<Logger name="org.cyk" level="trace">
			<AppenderRef ref="InstallConsole" />
		</Logger>
		
		<!--Logger name="org.cyk.system.root.business.impl.party.person.JobTitleBusinessImpl" level="trace">
			<AppenderRef ref="BusinessCrudConsole" />
		</Logger>
		<Logger name="org.cyk.system" level="trace">
			<AppenderRef ref="BusinessCrudConsole" />
		</Logger-->
		<Logger name="org.cyk.system.school.business.impl.session.ClassroomSessionBusinessImpl" level="trace">
			<AppenderRef ref="ClassroomSessionAfterCreateConsole" />
		</Logger>
		<!--Logger name="org.cyk.system.school.business.impl.session.ClassroomSessionDivisionSubjectBusinessImpl" level="trace">
			<AppenderRef ref="Console" />
		</Logger-->
		
		<Logger name="org.cyk.system.school.business.impl.session.StudentClassroomSessionBusinessImpl" level="trace">
			<AppenderRef ref="BusinessCrudConsole2" />
		</Logger>
	
		<Root level="debug">
			<!--AppenderRef ref="Console"/ -->
		</Root>
	</Loggers>
</Configuration>